_errorcode_prompt() {
  for i in "${PIPESTATUS[@]}"; do
    if [[ "$i" -gt 128 ]]; then
      signame=$(builtin kill -l $(($i - 128)) 2>/dev/null)
      signame="${signame:3}"
      PIPESTATUS_SIG[${#PIPESTATUS[*]}]="$i ($signame)"
    else
      PIPESTATUS_SIG[${#PIPESTATUS[*]}]="$i"
    fi
  done
  printf "%s" "${PIPESTATUS_SIG[*]}"
}
